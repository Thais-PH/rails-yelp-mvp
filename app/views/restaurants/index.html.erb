<p style="color: green"><%= notice %></p>

<div class="container">

  <h1>Restaurants in London</h1>

  <div id="restaurants">
    <% @restaurants.each do |restaurant| %>
      <%= render restaurant %>
      <p>
        <%= link_to "Show this restaurant", restaurant %>
      </p>
    <% end %>
  </div>

  <%= link_to "New restaurant", new_restaurant_path %>

</div>
